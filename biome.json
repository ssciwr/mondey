{
	"overrides": [
		{
			"include": ["*.svelte", "*.astro", "*.vue"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					}
				}
			}
		}
	],
	"linter": {
		"rules": {
			"suspicious": {
				"all": true,
				"noConsole": "off",
				"noConsoleLog": "off",
				"noExplicitAny": "off"
			},
			"style": {
				"recommended": true
			},
			"complexity": {
				"recommended": true,
				"noForEach": "off"
			},
			"correctness": {
				"recommended": true
			},
			"performance": {
				"recommended": true
			},
			"security": {
				"all": true
			}
		}
	}
}
